package note;

class Author {
  String name;
  int yob;
  
  Author(String name, int yob) {
    this.name = name;
    this.yob = yob;
  }
}

class Book {
  String title;
  Author author;
  int price;
  
  Book(String title, Author author, int price) {
    this.title = title;
    this.author = author;
    this.price = price;
  }
}

// examples and tests for the classes that represent
// books and authors
class ExampleBooks {
  ExampleBooks() {}

  
  
// examples of authors
  Author pat = new Author("Pat Conroy", 1948);
// examples of books
  Book beaches = new Book("Beaches", this.pat, 20);

 // test the method salePrice for the class Book

 }
